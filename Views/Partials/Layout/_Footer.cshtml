@using Umbraco.Cms.Core.Strings
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var rootContent = Umbraco.ContentAtRoot();
    var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

    // Robust hämtning av footerText: funkar både för Textstring och RTE
    string footerText =
        siteSettings?.Value<string>("footerText")
        ?? siteSettings?.Value<IHtmlEncodedString>("footerText")?.ToString()
        ?? "© Onatrix. All Rights Reserved.";

    // Färgen kan du behålla som tidigare om den kompilerar
    var footerBgColor = siteSettings?.FooterBgColor?.Color ?? "#0e0e0e";
}

<footer class="py-4" style="background-color:@footerBgColor; color: var(--clr-white-100);">
    <div class="max-w-7xl mx-auto px-4 text-center">
        <p class="text-sm footer">
            @Html.Raw(footerText)
        </p>
    </div>
</footer>
